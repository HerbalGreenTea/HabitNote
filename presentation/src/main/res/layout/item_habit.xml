<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@drawable/background_item_habit">

    <View
        android:id="@+id/habit_color"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:background="@color/colorLightGray"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/body_habit"/>

    <LinearLayout
        android:id="@+id/body_habit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/habit_color"
        app:layout_constraintEnd_toStartOf="@id/info_count">

        <TextView
            android:id="@+id/habit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="сделать матан"
            android:textSize="22sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/habit_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habit_priority_high"
            style="@style/tv_item_habit"
            android:layout_marginTop="5dp" />

        <TextView
            style="@style/tv_item_habit"
            android:id="@+id/habit_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="период: 5 дней"
            android:layout_marginTop="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/body_habit"
        android:gravity="center">

        <TextView
            android:id="@+id/habit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/7"
            android:textColor="@color/colorLightGray"
            android:textSize="24sp"/>

        <ImageButton
            android:id="@+id/btn_done_habit"
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_check"
            android:backgroundTint="@color/colorLightGray"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>