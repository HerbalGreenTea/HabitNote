<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_habit"
    android:layout_margin="10dp"
    android:padding="5dp">

    <View
        android:id="@+id/habit_color"
        android:layout_width="15dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/habit_str2"
        android:background="@color/electricPurple"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/habit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/habit_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="50dp"
        android:text="сделать матан"
        android:textSize="22sp"
        android:textColor="@color/electricPurple"/>

    <LinearLayout
        android:id="@+id/habit_str1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/habit_title"
        app:layout_constraintStart_toEndOf="@id/habit_color"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/habit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="хорошая"
            style="@style/tv_item_habit"/>

        <TextView
            style="@style/text_view_item_habit"
            android:text=" с "/>

        <TextView
            android:id="@+id/habit_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="высоким"
            style="@style/tv_item_habit"/>

        <TextView
            style="@style/text_view_item_habit"
            android:text=" приоритетом"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/habit_str2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/habit_str1"
        app:layout_constraintStart_toEndOf="@id/habit_color"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/text_view_item_habit"
            android:text="@string/repeat"/>

        <TextView
            android:id="@+id/habit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            style="@style/tv_item_habit"/>

        <TextView
            style="@style/text_view_item_habit"
            android:text=" раз в "/>

        <TextView
            android:id="@+id/habit_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            style="@style/tv_item_habit"/>

        <TextView
            style="@style/text_view_item_habit"
            android:text=" дней"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>