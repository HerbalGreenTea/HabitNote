<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/createHabitFragment"
        android:name="com.example.habitnote.CreateHabitFragment"
        android:label="fragment_create_habit"
        tools:layout="@layout/fragment_create_habit" />
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.habitnote.MainFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_createHabitFragment"
            app:destination="@id/createHabitFragment" />
    </fragment>
</navigation>